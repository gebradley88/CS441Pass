// This file tests the do-until loops, which produces the same output as
//  tests_dowhile.cal, but uses inverted expression logic to achieve this
//  result. ( i >= n instead of i < n)

begin
int n = 4;
int s = 0;
int i = 0;

do
{
  i = i + 1;
  s = s + (2*i-1);
} until (i >= n)
print s;

i = 0;
s = 0;
do
{
  i = i + 1;
  s = s + (2*i-1);
} until (i >= n)
print s;
end
